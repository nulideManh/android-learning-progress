<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StartService mode"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_start1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStart1Click"
            android:text="Start the service" />

        <Button
            android:id="@+id/btn_stop1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStop1Click"
            android:text="Out of service" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BindService mode"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_start2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStart2Click"
            android:text="Start the service" />

        <Button
            android:id="@+id/btn_stop2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStop2Click"
            android:text="Out of service" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>